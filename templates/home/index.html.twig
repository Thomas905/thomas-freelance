 {% extends 'base.html.twig' %}

{% block title %}Thomas Clarisse{% endblock %}

{% block body %}
<header class="profile container">
    <i class="ri-moon-line change-theme" id="theme-button"></i>
    <div class="profile__container grid">
        <div class="profile__data">
            <div class="profile__border">
                <div class="profile__perfil">
                    <img src="img/profil.png" alt="">
                </div>
            </div>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert {{ label }}">
                        <div class="{{ label }}">
                            {{ message }}
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
            <h2 class="profile__name">Thomas Clarisse</h2>
            <h3 class="profile__profession">Développeur FullStack | Free-lance</h3>

            <ul class="profile__social">
                <a href="https://www.linkedin.com/in/thomas-clarisse/" target="_blank" class="profile__social-link">
                    <i class="ri-linkedin-box-line"></i>
                </a>
                <a href="https://github.com/Thomas905" target="_blank" class="profile__social-link">
                    <i class="ri-github-line"></i>
                </a>
            </ul>
        </div>

        <div class="profile__info grid">
            <div class="profile__info-group">
                <h3 class="profile__info-number">+ 2 ans</h3>
                <p class="profile__info-description">
                    d'expériences
                </p>
            </div>
            <div class="profile__info-group">
                <h3 class="profile__info-number">+ 20</h3>
                <p class="profile__info-description">
                    projets réalisés
                </p>
            </div>
            <div class="profile__info-group">
                <h3 class="profile__info-number">+ 50</h3>
                <p class="profile__info-description">clients <br> satisfait</p>
            </div>
        </div>

        <div class="profile__buttons">
            <a download="" href="pdf/thomasclarisse.pdf" class="button">
                Télécharger mon CV <i class="ri-download-line"></i>
            </a>
        </div>
    </div>
</header>

<main class="main">
    <section class="filters container">
        <ul class="filters__content">
            <button class="filters__button filter-tab-active" data-target="#projects">
                Projets réalisés
            </button>
            <button class="filters__button" data-target="#skills">
                Compétences
            </button>
        </ul>

        <div class="filters__sections">
            <div class="projects__content grid filters__active" data-content id="projects">
                <article class="projects__card">
                    <img src="/img/project1.jpg" alt="" class="projects__img">

                    <div class="projects__modal">
                        <div>
                            <span class="projects__subtitle">WebInCloudy</span>
                            <h3 class="projects__title">Hébergement serveur virtuel</h3>
                            <a href="#" class="projects__button button button__small">
                                <i class="ri-link"></i>
                            </a>
                        </div>
                    </div>
                </article>

                <article class="projects__card">
                    <img src="/img/project2.jpg" alt="" class="projects__img">

                    <div class="projects__modal">
                        <div>
                            <span class="projects__subtitle">CMusic</span>
                            <h3 class="projects__title">Gestionnaire de prestation musical</h3>
                            <a href="#" class="projects__button button button__small">
                                <i class="ri-link"></i>
                            </a>
                        </div>
                    </div>
                </article>

                <article class="projects__card">
                    <img src="/img/project3.jpg" alt="" class="projects__img">

                    <div class="projects__modal">
                        <div>
                            <span class="projects__subtitle">MyBooks</span>
                            <h3 class="projects__title">Collection de livre digital</h3>
                            <a href="#" class="projects__button button button__small">
                                <i class="ri-link"></i>
                            </a>
                        </div>
                    </div>
                </article>

                <article class="projects__card">
                    <img src="/img/project4.jpg" alt="" class="projects__img">

                    <div class="projects__modal">
                        <div>
                            <span class="projects__subtitle">Powy</span>
                            <h3 class="projects__title">Plateforme qui met en relation des étudiants avec des mentors pour leur permettre de monter en compétences</h3>
                            <a href="#" class="projects__button button button__small">
                                <i class="ri-link"></i>
                            </a>
                        </div>
                    </div>
                </article>

                <article class="projects__card">
                    <img src="/img/project5.jpg" alt="" class="projects__img">

                    <div class="projects__modal">
                        <div>
                            <span class="projects__subtitle">DansTonGroupe</span>
                            <h3 class="projects__title">Site de rencontre pour musicien hors du commun</h3>
                            <a href="#" class="projects__button button button__small">
                                <i class="ri-link"></i>
                            </a>
                        </div>
                    </div>
                </article>

                <article class="projects__card">
                    <img src="/img/project5.jpg" alt="" class="projects__img">

                    <div class="projects__modal">
                        <div>
                            <span class="projects__subtitle">ManoBot</span>
                            <h3 class="projects__title">ChatBot Virtuel en partenariat avec Mano-Mano</h3>
                            <a href="#" class="projects__button button button__small">
                                <i class="ri-link"></i>
                            </a>
                        </div>
                    </div>
                </article>
            </div>

            <div class="skills__content grid" data-content id="skills">
                <div class="skills__area">
                    <h3 class="skills__title">Front-end</h3>

                    <div class="skills__box">
                        <div class="skills__group">
                            <div class="skills__data">
                                <i class="ri-checkbox-circle-line"></i>

                                <div>
                                    <h3 class="skills__name">HTML</h3>
                                    <span class="skills__level">Expert</span>
                                </div>
                            </div>

                            <div class="skills__data">
                                <i class="ri-checkbox-circle-line"></i>

                                <div>
                                    <h3 class="skills__name">CSS</h3>
                                    <span class="skills__level">Expert</span>
                                </div>
                            </div>

                            <div class="skills__data">
                                <i class="ri-checkbox-circle-line"></i>

                                <div>
                                    <h3 class="skills__name">JavaScript</h3>
                                    <span class="skills__level">Intermédiaire</span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="skills__group">
                            <div class="skills__data">
                                <i class="ri-checkbox-circle-line"></i>

                                <div>
                                    <h3 class="skills__name">React</h3>
                                    <span class="skills__level">Débutant</span>
                                </div>
                            </div>

                            <div class="skills__data">
                                <i class="ri-checkbox-circle-line"></i>

                                <div>
                                    <h3 class="skills__name">Bootstrap</h3>
                                    <span class="skills__level">Intermédiaire</span>
                                </div>
                            </div>

                            <div class="skills__data">
                                <i class="ri-checkbox-circle-line"></i>

                                <div>
                                    <h3 class="skills__name">Git</h3>
                                    <span class="skills__level">Expert</span>
                                </div>
                            </div>

                            <div class="skills__data">
                                <i class="ri-checkbox-circle-line"></i>

                                <div>
                                    <h3 class="skills__name">FIGMA / XD</h3>
                                    <span class="skills__level">Intermédiaire</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="skills__area">
                    <h3 class="skills__title">Back-end</h3>

                    <div class="skills__box">
                        <div class="skills__group">

                            <div class="skills__data">
                                <i class="ri-checkbox-circle-line"></i>

                                <div>
                                    <h3 class="skills__name">Symfony</h3>
                                    <span class="skills__level">Expert</span>
                                </div>
                            </div>

                            <div class="skills__data">
                                <i class="ri-checkbox-circle-line"></i>

                                <div>
                                    <h3 class="skills__name">PHP</h3>
                                    <span class="skills__level">Intermédiaire</span>
                                </div>
                            </div>

                            <div class="skills__data">
                                <i class="ri-checkbox-circle-line"></i>

                                <div>
                                    <h3 class="skills__name">MySQL</h3>
                                    <span class="skills__level">Avancé</span>
                                </div>
                            </div>

                            <div class="skills__data">
                                <i class="ri-checkbox-circle-line"></i>

                                <div>
                                    <h3 class="skills__name">Express</h3>
                                    <span class="skills__level">Débutant</span>
                                </div>
                            </div>
                        </div> 
                    </div>
                </div>
            </div>
        </div>
        <h1 class="text-center mt-5">Vous avez un projet ?</h1>

        {{ form_start(form) }}
        <div class="form-group">
            <div class="row">
                <label for="firstname">Votre prénom *</label>
                {{ form_widget(form.firstname) }}
                <label for="lastname">Votre nom *</label>
                {{ form_widget(form.lastname) }}
                <label for="email">Votre email *</label>
                {{ form_widget(form.email) }}
                <label for="company">Votre entreprise</label>
                {{ form_widget(form.company) }}
                <label for="title-message">Votre titre de message *</label>
                {{ form_widget(form.titleMessage) }}
                <label for="message">Votre message *</label>
                {{ form_widget(form.message) }}
                <div class="submit-button">
                    <button class="button" type="submit">Envoyé</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </section>
</main>

<footer class="footer container">
    <span class="footer__copy">
        &#169; Thomas Clarisse - 2022
    </span>
</footer>
<script src="js/scrollreveal.min.js"></script>

<script src="js/main.js"></script>

{% endblock %}
